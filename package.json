{
  "name": "kits-browser",
  "productName": "KITS Browser",
  "version": "1.0.0",
  "description": "Ultra Faster Speed Browsing - Powered by KITS WebGen",
  "main": "src/main.js",
  "author": "KITS WebGen",
  "scripts": {
    "start": "node scripts/start-electron.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder -w"
  },
  "build": {
    "appId": "com.kitswebgen.browser",
    "productName": "KITS Browser",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/renderer/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "KITS Browser"
    }
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1",
    "electron-log": "^5.4.3",
    "electron-store": "^8.2.0",
    "node-cron": "^4.2.1",
    "openai": "^6.22.0",
    "sanitize-html": "^2.17.0",
    "uuid": "^13.0.0"
  }
}